generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  email    String     @unique
  password String
  role     String
  attendances Int @default(0)
  absences Absence[]
}

model Absence {
  id        Int      @id @default(autoincrement())
  date      DateTime @db.Date
  studentId Int
  student   User     @relation(fields: [studentId], references: [id])
}
